@model RentACar.Models.EmailModel
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="location">
    <div class="location_info">
        <p>Наше расположение:</p>
        <p>Главный офис компании Zp rent a car находится в городе Запорожье по адресу пр-т Соборный, 135, гостиница "Интурист", оф.3.</p>
        <p>Контакты:</p>
        @{Html.RenderAction("Phone", "Home");}
        @{Html.RenderAction("Email", "Home");}
    </div>
    <div class="ofice">
        <img src="/Content/img/ofice.jpg" alt="">
    </div>



</section>
<section class="feedback">
    <div class="intourist">
        <img src="/Content/img/intourist.png" alt="">
    </div>
    <div class="feedback_form">
        <p>Обратная связь</p>
        @using (Html.BeginForm("SendEmail", "En", FormMethod.Post))
        {
            @Html.EditorFor(model=>model.Name, new { htmlAttributes = new {  @placeholder = "Имя", @required = "true" } })
            @Html.EditorFor(model=>model.Email, new { htmlAttributes = new { @placeholder = "Имя", @required = "true" } })
            @Html.TextAreaFor(model=>model.Message, new { htmlAttributes = new { @placeholder = "Имя", @required = "true" } })
            <button type="submit">Отправить</button>
        }
            @*@<input type="text" placeholder="Имя" required="true">
            <input type="email" placeholder="Электронная почта" required="true">
            <textarea placeholder="Сообщение" rows="1" required="true"></textarea>*@
    </div>
</section>

<section class="map">
