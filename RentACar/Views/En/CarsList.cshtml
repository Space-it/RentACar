@model IEnumerable<RentACar.Car>

@foreach (var item in Model)
{
<div class="avto">
    <p>@Html.DisplayFor(modelItem => item.ModelName)</p>
    <div class="avto_img">
        <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="">
    </div>
</div>
<div class="charact">
    <p class="charact_name">Features</p>
    <div class="charact_list">
        <p>Transmission type:@Html.DisplayFor(modelItem => item.TransmissionType)</p>
        <p>Number of doors:@Html.DisplayFor(modelItem => item.NumberOfDoors)</p>
        <p>Passengers count:@Html.DisplayFor(modelItem => item.NumberOfPassengers)</p>
        <p>Capacity of the trunk:@Html.DisplayFor(modelItem => item.TrunkVolume)</p>
        <p>Engine displacements:@Html.DisplayFor(modelItem => item.EngineCapacity)</p>
    </div>
</div>
}