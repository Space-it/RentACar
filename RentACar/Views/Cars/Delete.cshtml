@model RentACar.Car

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<section class="center_div">
    <h2>Delete</h2>

    <h3>Вы уверены что желаете удалить машину из списка?</h3>
    <div>
        <h4>Car</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <p>Тип коробки передач</p>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TransmissionType)
            </dd>

            <dt>
                <p>Количество дверей</p>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumberOfDoors)
            </dd>

            <dt>
                <p>Количество пассажиров</p>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumberOfPassengers)
            </dd>

            <dt>
                <p>Объем багажника</p>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TrunkVolume)
            </dd>

            <dt>
                <p>Объем двигателя</p>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.EngineCapacity)
            </dd>

            <dt>
                <p>Адресс картинки</p>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ImageUrl)
            </dd>

            <dt>
                <p>Модель автомобиля</p>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ModelName)
            </dd>

            <dt>
                <p>Стоимость за сутки</p>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Удалить машину" class="btn btn-default" /> |
                @Html.ActionLink("Назад к списку", "Index")
            </div>
        }
    </div>
</section>
