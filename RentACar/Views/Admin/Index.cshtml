        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "", @placeholder = "Логин", @required = "true" })
    </p>
        <p>
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "", @placeholder = "Пароль", @required = "true" })
