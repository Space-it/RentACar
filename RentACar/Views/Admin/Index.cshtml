@model RentACar.Models.LoginModel
@{
    ViewBag.Title = "Панель Администратора";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h2>Авторизация</h2>

<section class="carsTable">

    @using(Html.BeginForm("Index", "Admin", FormMethod.Post)
    {
    <p>
