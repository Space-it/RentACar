<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/Content/img/favicon.png" type="image/png">
    <title>@ViewBag.Title</title>
    <meta name="yandex-verification" content="72bc1112d5c85217" />
    <meta name="description" content="@ViewBag.Description">
    <meta name="keywords" content="@ViewBag.Keywords">
    <link rel="stylesheet" href="~/Content/jquery-ui.min.css">
    <link rel="stylesheet" href="~/Content/style.min.css">
    
</head>
<body>
    <section class="head_menu">
        <div class="logo">
            <p>@Html.ActionLink("Zp", "Index", "EN")</p>
            <h1 class="logo_rent">@Html.ActionLink("rent a car","Index","EN")</h1>
        </div>

        <img src="/Content/img/mobile_menu.png" alt="Mobile Menu" class="toggle_nav" />
        <nav class="navigation">
            <ul class="active">
                <li>@Html.ActionLink("Home", "Index", "EN")</li>
                <li>@Html.ActionLink("Our Cars", "Cars", "EN")</li>
                <li>@Html.ActionLink("Transfer", "Transfer", "EN")</li>
                <li>@Html.ActionLink("Booking", "Booking", "EN")</li>
                <li>@Html.ActionLink("About us", "About", "EN")</li>
                <li>@Html.ActionLink("Contacts", "Contacts", "EN")</li>
                <li class="language">@Html.ActionLink("RU", "Index", "Home") | @Html.ActionLink("EN", "Index", "En")</li>
            </ul>
        </nav>
    </section>

    @RenderBody()

    <section class="footer">


        <footer>
            <div class="footer_menu">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "EN")</li>
                    <li>@Html.ActionLink("Our Cars", "Cars", "EN")</li>
                    <li>@Html.ActionLink("Transfer", "Transfer", "EN")</li>
                    <li>@Html.ActionLink("Booking", "Booking", "EN")</li>
                    <li>@Html.ActionLink("About us", "About", "EN")</li>
                    <li>@Html.ActionLink("Contacts", "Contacts", "EN")</li>
                </ul>
            </div>
            <div class="footer_name">
                <p>Rent a Car</p>
                <p>ZP</p>
                <p>Zaporozhye 2018</p>
            </div>
            <div class="footer_contacts">
                @{Html.RenderAction("Phone", "Home");}
                @{Html.RenderAction("Email", "Home");}
                <p><a href="http://space-it.xyz">Space-IT</a></p>
            </div>
        </footer>
    </section>
    <script src="/Scripts/jquery.min.js"></script>
    <script src="/Scripts/jquery-ui.min.js"></script>
    <script src="/Scripts/script.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
