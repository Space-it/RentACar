<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Rent A Car Zaporozhye</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
    @Styles.Render("~/Content/css")
</head>
<body>
    <section class="head_menu">
        <div class="logo">

            <p>ZP</p>
            <h1>rent a car</h1>
        </div>

        <a class="toggle_nav" href="#">&#9776;</a>
        <nav class="navigation">
            <ul class="active">
                <li class="current-item">@Html.ActionLink("Главная", "Index")</li>
                <li><a href="#">О нас</a></li>
                <li>@Html.ActionLink("Автомобили","Cars")</li>
                <li>@Html.ActionLink("Трансфер", "Transfer")</li>
                <li><a href="#">Бронирование</a></li>
                <li><a href="#">Контакты</a></li>
            </ul>
        </nav>
    </section>

    @RenderBody()

    <section class="footer">
        <footer>
            <div class="footer_menu">
                <ul>
                    <li><a href="#">Главная</a></li>
                    <li><a href="#">О нас</a></li>
                    <li><a href="#">Автомобили</a></li>
                    <li><a href="#">Трансфер</a></li>
                    <li><a href="#">Бронирование</a></li>
                    <li><a href="#">Контакты</a></li>
                </ul>
            </div>
            <div class="footer_name">
                <p>Rent a Car</p>
                <p>ZP</p>
                <p>Запорожье 2016</p>
            </div>
            <div class="footer_contacts">
                <p>+38(063)455 93 61</p>
                <p>+38(063)455 93 61</p>
                <p><a href="#">Space-IT</a></p>
            </div>
        </footer>
    </section>
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
